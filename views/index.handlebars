<h1>Eat-A-Burger</h1>

<h2>Available Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Not Available Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label >Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>


  <button type="submit">Add Burger</button>
</form>
