
<div class="col-md-12">
  <center>
    <h1>Eat-A-Burger</h1>
</div>

<div class="col-md-6">
    <h2>Available Burgers</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
</div>

<div class="row">
  <div class="col-md-6">
      <h2>Not Available Burgers</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
  </div>
</div>

      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label >Add a Burger:</label>
          <input type="text" id="burger" name="name">
        </div>


        <button type="submit">Add Burger</button>
      </form>
  </div>
</div>